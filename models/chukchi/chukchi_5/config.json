{
    "dataset_reader": {
        "type": "ud_reader"
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 8,
        "biggest_batch_first": true,
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "joint_tagger_parser",
        "arc_mlp_size": 128,
        "embedding_dropout": 0.33,
        "encoded_dropout": 0.25,
        "encoder": {
            "type": "stacked_bidirectional_lstm",
            "hidden_size": 128,
            "input_size": 30,
            "layer_dropout_probability": 0.25,
            "num_layers": 2,
            "recurrent_dropout_probability": 0.25,
            "use_highway": true
        },
        "label_mlp_size": 64,
        "mlp_dropout": 0.25,
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 30,
                    "trainable": true
                }
            }
        },
        "upos_dropout": 0.25,
        "upos_hidden": 64
    },
    "train_data_path": "data/Chukchi/flat_train/ckt_hse-ud-train.05.conllu",
    "validation_data_path": "data/Chukchi/flat_test/ckt_hse-ud-test.05.conllu",
    "trainer": {
        "cuda_device": 0,
        "grad_norm": 5,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "min_lr": 1e-05,
            "patience": 5
        },
        "num_epochs": 100,
        "optimizer": {
            "type": "adam",
            "lr": 0.004,
            "weight_decay": 0.0001
        },
        "patience": 20
    },
    "vocabulary": {
        "non_padded_namespaces": [
            "*tags",
            "*labels",
            "upos",
            "dependency"
        ]
    }
}